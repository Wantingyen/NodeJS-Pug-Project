html(lang="en")
    head
        title= title

        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Germania+One&family=Lobster+Two:wght@700&family=Raleway:wght@300;500&display=swap' rel='stylesheet')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' 
            integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css')

        script(type='text/javascript' src='scripts.js' defer)

        //-如果之後把styles.css檔案放入CSS資料夾，要把href路徑改為css/styles.css

        link(rel='stylesheet' href='styles.css')
        script(src='scripts.js')

    body

    //- navbar section

    nav.navbar.fixed-top.navbar-expand-lg.navbar-light.bg-white(style='padding-bottom: 0px;padding-top: 12px;')
        .container(style='height: 70px;')
            a.navbar-brand(href='/')
                img.align-items-center.justify-content-center.justify-content-md-between.mb-4.mx-3(src='./img/logo.png' alt='Dessert World' width='30' height='48')
                | #{pageHeader}
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.me-auto.mb-2.mb-lg-0.ms-auto
                    li.nav-item
                        a.nav-link(href='/') Home
                            //- a.nav-link.active(aria-current='page' href='/') Home
                    li.nav-item
                        a.nav-link(href='/about') About
                    li.nav-item.dropdown
                        a#navbarDropdown.nav-link.dropdown-toggle(href='/recipes' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                            | Recipes
                        ul.dropdown-menu(aria-labelledby='navbarDropdown')
                            li
                                a.dropdown-item(href='/recipes') All Recipes
                            li
                                a.dropdown-item(href='/recipes/cake') Cake Recipes
                            li
                                a.dropdown-item(href='/recipes/cookie') Cookie Recipes
                            li
                                a.dropdown-item(href='/recipes/macaron') Macaron Recipes
                            li
                                a.dropdown-item(href='/recipes/icecream') Ice Cream Recipes
                            li
                                a.dropdown-item(href='/recipes/beverage') Beverage Recipes
                    li.nav-item
                        a.nav-link(href='/contact') Contact
                        //-form.d-flex.pt-2
                            input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
                            button.btn.btn-outline-secondary(type='submit') Search
                .col-md-3.text-end
                    form.d-flex.pt-2(method='POST' action='/search')
                        input.form-control.me-2(type='search' name='searchTerm' placeholder='Search' aria-label='Search')


    //- navbar end

script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' 
    integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' 
    crossorigin='anonymous')



//- serch bar
    <div class="col-md-3 text-end">
        <form method="POST" action="/search">
            <input type="search" name="searchTerm" class="form-control" placeholder="Search" aria-label="Search">
        </form>
    </div>

